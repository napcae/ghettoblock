<head>
  <link href="https://vjs.zencdn.net/7.7.5/video-js.css" rel="stylesheet" />

  <!-- If you'd like to support IE8 (for Video.js versions prior to v7) -->
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  <link
  href="https://unpkg.com/video.js@7/dist/video-js.min.css"
  rel="stylesheet"
/>

<!-- City -->
<link
  href="https://unpkg.com/@videojs/themes@1/dist/city/index.css"
  rel="stylesheet"
/>
</head>

<body>
  <video
    id="my-video"
    class="video-js vjs-theme-city"
    controls
    preload="auto"
    width="640"
    height="264"
    data-setup="{}"
  >
    <source src="http://127.0.0.1:1337/<%= params["user"] %>.mp4" type="video/mp4" />
    
    <p class="vjs-no-js">
      To view this video please enable JavaScript, and consider upgrading to a
      web browser that
      <a href="https://videojs.com/html5-video-support/" target="_blank"
        >supports HTML5 video</a
      >
    </p>
  </video>
  <p>Player status, send to backend: <span id="status"></span></p>

  <button onClick='window.video.pause()'>test</button>

  <script src="https://vjs.zencdn.net/7.7.5/video.js"></script>
  <script>
    var vid = document.getElementById("my-video");
    const texting = document.getElementById("status")

    vid.onplay = function() {
        console.log("The video has started to play");
        texting.innerHTML = "played"
    };

    vid.onpause = function() {
        console.log("The video has started to play");
        texting.innerHTML = "paused"
    }; 


    

    // var vid2 = document.getElementById("my-video");
    // vid2.onplay = function() {
    //     console.log("The video has started to play " + console.dir(vid2));
    // }; 
  </script>
</body>